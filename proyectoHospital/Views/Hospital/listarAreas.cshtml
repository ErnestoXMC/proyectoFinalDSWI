@model IEnumerable<proyectoHospital.Models.Area>

@{
    ViewData["Title"] = "listarAreas";
}

<h1>Áreas</h1>

<p>
    <a asp-action="agregarArea" class="btn btn-primary"><i class="fas fa-user-plus"></i></a>
</p>

@if (TempData["MensajeAlerta"] != null || TempData["MensajeAgregar"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MensajeAlerta"]
        @TempData["MensajeAgregar"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
}
@if (TempData["MensajeEliminar"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["MensajeEliminar"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cod_area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nom_area)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cod_area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_area)
            </td>
            <td>
                    <a asp-action="actualizarArea" asp-route-id="@item.cod_area" class="btn btn-info"><i class="fas fa-pen"></i></a>
                    <a asp-action="eliminarArea" asp-route-id="@item.cod_area" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
