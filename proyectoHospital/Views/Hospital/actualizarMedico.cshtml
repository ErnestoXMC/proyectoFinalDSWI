@model proyectoHospital.Models.Medico

@{
    ViewData["Title"] = "actualizarMedico";
}

<h1>Actualizar Médico</h1>
<a asp-action="listarMedicos" class="btn btn-success"><i class="fas fa-arrow-left"></i></a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="actualizarMedico">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cod_medico" class="control-label"></label>
                <input asp-for="cod_medico" class="form-control" readonly/>
                <span asp-validation-for="cod_medico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nom_med" class="control-label"></label>
                <input asp-for="nom_med" class="form-control" />
                <span asp-validation-for="nom_med" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="edad_med" class="control-label"></label>
                <input asp-for="edad_med" class="form-control" />
                <span asp-validation-for="edad_med" class="text-danger"></span>
            </div><br />
            <div class="input-group mb-3">
                <label asp-for="sexo_med" class="input-group-text" for="inputGroupSelect01">Sexo</label>
                <select asp-for="sexo_med" class="form-select" id="inputGroupSelect01">
                    <option value="" disabled selected>Seleccionar</option>
                    <option value="M">Masculino</option>
                    <option value="F">Femenino</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="cod_area" class="control-label"></label>
                <select asp-for="cod_area" asp-items="ViewBag.area" class="form-control"></select>
                <span asp-validation-for="cod_area" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @ViewBag.mensaje
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
