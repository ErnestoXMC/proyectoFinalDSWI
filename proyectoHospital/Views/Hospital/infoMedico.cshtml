@model proyectoHospital.Models.Medico

@{
    ViewData["Title"] = "infoMedico";
}

<h1>
    Información del Médico @Html.DisplayFor(model => model.nom_med)</h1>
<a asp-action="listarMedicos" class="btn btn-success"><i class="fas fa-arrow-left"></i></a>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cod_medico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cod_medico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nom_med)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nom_med)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.edad_med)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.edad_med)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.sexo_med)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.sexo_med)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cod_area)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cod_area)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="actualizarMedico" asp-route-id="@Model.cod_medico" class="btn btn-info"><i class="fas fa-pen"></i></a>
    <a asp-action="eliminarMedico" asp-route-id="@Model.cod_medico" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
</div>
