@model IEnumerable<proyectoHospital.Models.Medico>

@{
    ViewData["Title"] = "listarMedicos";
}

<h1>Medicos Especializados</h1>

<p>
    <a asp-action="agregarMedico" class="btn btn-primary"><i class="fas fa-user-plus"></i></a>
</p>
@if (TempData["MensajeAlerta"] != null || TempData["MensajeAgregar"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MensajeAlerta"]
        @TempData["MensajeAgregar"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
}
@if (TempData["MensajeEliminar"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["MensajeEliminar"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cod_medico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nom_med)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.edad_med)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sexo_med)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cod_area)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cod_medico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nom_med)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.edad_med)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sexo_med)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cod_area)
                </td>
            <td>
                    <a asp-action="actualizarMedico" asp-route-id="@item.cod_medico" class="btn btn-info"><i class="fas fa-pen"></i></a>
                    <a asp-action="infoMedico" asp-route-id="@item.cod_medico" class="btn btn-warning"><i class="fas fa-info-circle"></i></a>
                    <a asp-action="eliminarMedico" asp-route-id="@item.cod_medico" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
