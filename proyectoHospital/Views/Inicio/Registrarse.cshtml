@model proyectoHospital.Models.Usuario;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>

    <div class="container-form register hide">
        <div class="information">
            <div class="info-childs">
                <h2>Bienvenido Al Servidor</h2>
                <p>¿Ya tienes una cuenta?</p>
                <a href="@Url.Action("IniciarSesion","Inicio")"> Iniciar Sesion</a>
            </div>
        </div>
        <div class="form-information">
            <div class="form-information-childs">
                <h2>Crear una Cuenta</h2>
                <form class="form form-register" asp-controller="Inicio" asp-action="Registrarse" method="post">
                    <div>
                        <label>
                            <i class='bx bx-user'></i>
                            <input  type="text" placeholder="Nombre Completo" asp-for="NombreUsuario" required />
                        </label>
                    </div>
                    <div>
                        <label>
                            <i class='bx bx-envelope'></i>
                            <input  type="email" placeholder="Correo" required asp-for="Correo" />

                        </label>
                    </div>
                    <div>
                        <label>
                            <i class='bx bx-lock-alt'></i>
                            <input  type="password" placeholder="Contraseña" required asp-for="Clave" />

                        </label>
                    </div>
                    <button class="boton" type="submit">Registrate</button>
                    @if (ViewData["Mensaje"] != null)
                    {

                        <div class="form-group">
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        </div>
                    }
                    
                </form>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
